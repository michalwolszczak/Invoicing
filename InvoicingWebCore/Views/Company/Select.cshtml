@model IEnumerable<Company>

<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <div class="container p-3">
            <div class="row pt-4">
                <div class="col-6">
                    <h1>Select company</h1>
                </div>
            </div>		
            <div class="row mb-5">
                <div class="col-md-12 table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Company name</th>
                                <th scope="col">Krs</th>
                                <th scope="col">Regon</th>
                                <th scope="col">Nip</th>
                                <th scope="col"></th>  
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var company in Model)
                            {
                                <tr>
                                    <td>
                                        @company.Name
                                    </td>
                                     <td>
                                        @company.KRS
                                    </td>
                                    <td>
                                        @company.Regon
                                    </td>
                                    <td>
                                        @company.NIP
                                    </td>
                                    <td>
                                        <div class="w-75 btn-group" role="group">
                                            <form method="post">
                                                <a asp-controller="Company" asp-action="Pick" asp-route-id="@company.Id" class="btn btn-primary mx-0"><i class="bi bi-pencil-square"></i>Select company</a>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-3"></div>
</div>