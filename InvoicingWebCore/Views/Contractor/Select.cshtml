@model IEnumerable<Contractor>

<div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h1>Kontrahenci</h1>
            </div>
        </div>
		
        <div class="row mb-5">
            <div class="col-md-12 table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Nazwa</th>
                            <th scope="col">KRS</th>
                            <th scope="col">Regon</th>
                            <th scope="col">NIP</th>
                            <th scope="col"></th> 
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var obj in Model)
                        {
                            <tr @*onclick="location.href = '@(Url.Action("Index", "InvoiceDetails", @obj))'"*@>
                                <td>
                                    @obj.Name
                                </td>
                                 <td>
                                    @obj.KRS
                                </td>
                                <td>
                                    @obj.Regon
                                </td>
                                <td>
                                    @obj.NIP
                                </td>
                                <td>
                                    <div class="w-75 btn-group" role="group">
                                        <a asp-controller="Invoice" asp-action="Create" asp-route-id="@obj.Id" class="btn btn-primary mx-0"><i class="bi bi-pencil-square"></i>Dodaj do faktury</a>
                                    </div>
                                </td>                               
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
</div>