@using InvoicingWebCore.ViewModel
    @model ProductToInvoice

<div class="container p-3">
        <input hidden asp-for="@Model.InvoiceId" />
        <div class="row pt-4">
            <div class="col-6">
                <h1>Produkty</h1>
            </div>
        </div>		
        <div class="row mb-5">
            <div class="col-md-12 table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Nazwa produktu</th>
                            <th scope="col">Cena netto</th>
                            <th scope="col">Cena brutto</th>
                            <th scope="col">VAT [%]</th>
                            <th scope="col">Opis</th>  
                            <th scope="col"></th>  
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var obj in Model.Products)
                        {
                            <tr>
                                <td>
                                    @obj.Name
                                </td>
                                 <td>
                                    @obj.NetPrice
                                </td>
                                <td>
                                    @obj.GrossPrice
                                </td>
                                <td>
                                    @obj.Tax
                                </td>
                                <td>
                                    @obj.Description
                                </td>     
                                <td>
                                    <div class="w-75 btn-group" role="group">
                                        <a asp-controller="Invoice" asp-action="AddProductToInvoice" asp-route-id="@obj.Id" asp-route-invoiceId="@Model.InvoiceId" class="btn btn-primary mx-0"><i class="bi bi-pencil-square"></i>Dodaj do faktury</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
</div>