@using InvoicingWebCore.ViewModel

@model LoginViewModel

<div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
            <form id="account" method="post">
                <h2>Log in</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Login" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Login" class="form-label"></label>
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Password" class="form-label"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <hr/>
                <div>
                    <button type="submit" class="w-100 btn btn-primary">Log in</button>
                </div>
          </form>
    </div>
    <div class="col-sm-4"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
